months = ['Jan', 'Feb', 'Mar', 'Apr', 'May']
sales = [200, 250, 300, 280, 350]
import matplotlib.pyplot as plt
months = ['Jan', 'Feb', 'Mar', 'Apr', 'May']
sales = [200, 250, 300, 280, 350]
plt.bar(months, sales, color='violet', 
edgecolor='red')
plt.title("Monthly Sales Report")
plt.xlabel("Month")
plt.ylabel("Sales (in units)")
plt.show()
